using System;

namespace CF_556A
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = Convert.ToInt32(Console.ReadLine());
            string str = Console.ReadLine();
            int flag = 0;
            for(int i=0;i<str.Length;i++)
            {
                if (str[i] == '1')
                    flag++;
                else
                    flag--;
            }
            Console.WriteLine(Math.Abs(flag));
        }
    }
}
